<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

  <display-name>ldap-rest</display-name>
  <description>
     Servicios rest para acceso a LDAP
  </description>

    <!-- Listener que se ejecuta cuando se levanta la aplicaciÃ³n -->
    <listener>
       <listener-class>es.carm.helper.Launcher</listener-class>
    </listener>


    <!-- Filtros CAS para la APP:/centralita/ -->
    <servlet>
        <servlet-name>jersey-serlvet</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
           <param-name>com.sun.jersey.config.property.packages</param-name>
           <param-value>es.carm.openldap.restbox</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>jersey-serlvet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
       <welcome-file>index.jsp</welcome-file>
       <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
